*{
		font-family: Arial;
}

a{
		text-decoration: none;
		color:#235975;
}

html, body{
	height: 100%;
	overflow:hidden;
}

body{
	background: linear-gradient(-30deg, #6e1aad, #2f2e36, #8a3380);
	background-size: 400% 400%;
	animation: background_moovement 20s ease infinite;
}

@keyframes background_moovement{
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
