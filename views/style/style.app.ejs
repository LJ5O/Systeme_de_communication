body{
  height: 100%;
  width: 100%;
}

.panel{
  z-index: 5;
}

.grey{
  background-color: rgba(61, 61, 61, 0.5);
}

.servers_ul{
  list-style-type: none;
}

#chanel_settings_img{
  z-index: 1;
}

/*Liste des chanerls*/
.chanel{
  position: relative;
  height: 5%;
  width: 100%;
  border-radius: 30px;
  background-color: rgba(61, 61, 61);
  margin-top: 1%;
}

.chanel_name{
  margin: 0;
  margin-left: 18px;
  position: absolute;
  top: 50%;
  -ms-transform: translateY(-50%); /*https://www.w3schools.com/howto/howto_css_center-vertical.asp*/
  transform: translateY(-50%);
  color: white;
}

.text_chanel_image{
  position: absolute;
  top:10%;
  right: 5%;
}

.message{
  position: relative;
  z-index: 0;
  border-top: solid;
  border-top-width: 1px;
  border-top-color: #242424;

}
.message_sender_pseudo{
  z-index: 0;
  margin-top: 0.2%;
  margin-left: 0.5%;
  color: white;
  font-size: calc(8px + 1vh);
}
.message_text{

  margin-left: 0.5%;
  color: white;
  font-size: calc(8px + 1vh);
}

.central_div{
  overflow: hidden auto;
}

#input_message{
  position: absolute;
  left: 15%;
  right: 10%;
  bottom: 0%;
  top: 92%;
  border-style: dotted;
}
/*Ordinateurs*/
@media (min-width: 800px) {

  .text_chanel_image{
    width: 10%;
  }

  .server_div{
    position: absolute;
    top: 0%;
    left: 0%;
    right: 85%;
    bottom: 85%;
  }

  .chanel_list{
    position: absolute;
    top: 15%;
    bottom: 5%;
    left: 0%;
    right: 85%;
    overflow: hidden auto;
    border-top: solid;
    border-bottom: solid;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-bottom-color: #242424;
    border-top-color: #242424;
  }


  .central_div{
    right: 10%;
    position: absolute;
    left:15%;
    top: 5%;
    bottom: 8%;
  }

  .chanel_infos{
    right: 10%;
    position: absolute;
    left:15%;
    top: 0%;
    bottom: 95%;
    border-right: solid;
    border-left: solid;
    border-right-width: 1px;
    border-left-width: 1px;
    border-left-color: #242424;
    border-right-color: #242424;
  }

  .online_list{
    position: absolute;
    top: 0%;
    right:0%;
    left: 90%;
    bottom: 0%;
  }

  .user_area{
    position: absolute;
    bottom: 0%;
    top: 95%;
    left: 0%;
    right: 85%;
  }

  h3{
    font-size:16px;
  }

  #message_text_input{
    position: absolute;
    bottom: 0.5%;
    left: 50%;
    width: 90%;
    -ms-transform: translate(-50%, 0%);
    transform: translate(-50%, 0%);
  }

  #username{
    position: absolute;
    left: 0%;
    color: white;
  }

  .settings_img{
    width: 10%;
    position: absolute;
    right: 0%;
    top: 0%;
  }

  .extend_chanels_panel{
    display: none;
  }

  .extend_online_panel{
    display: none;
  }

  .animation_arrow{
    display: none;
  }
}

/*Telephones*/
@media (max-width: 799px){

  .text_chanel_image{
    width: 6%;
  }

  .server_div{
    position: absolute;
    top: 0%;
    left: 0%;
    right: 100%;/*Déplier*/
    bottom: 85%;
  }

  .chanel_list{
    position: absolute;
    top: 15%;
    bottom: 5%;
    left: 0%;
    right: 100%;/*Déplier*/
    overflow: hidden auto;
    border-top: solid;
    border-bottom: solid;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-bottom-color: #242424;
    border-top-color: #242424;
  }


  .central_div{
    right: 10%;
    position: absolute;
    left:15%;
    top: 5%;
    bottom: 8%;
  }

  .chanel_infos{/*Modifié*/
    right: 0%;/*Déplié*/
    position: absolute;
    left:0%;/*Déplié*/
    top: 0%;
    bottom: 90%;/*Déplié*/
    border-bottom: solid;
    border-bottom-width: 1px;
    border-bottom-color: #242424;
  }

  .online_list{
    position: absolute;
    top: 0%;
    right:0%;
    left: 100%;/*Déplier*/
    bottom: 0%;
  }

  .user_area{
    position: absolute;
    bottom: 0%;
    top: 95%;
    left: 0%;
    right: 100%;/*Déplier*/
  }

  h3{
    font-size:16px;
  }

  #username{
    position: absolute;
    left: 0%;
    color: white;
    font-size: calc(6px + 1vw);
    display: none;/*Montrer*/
  }

  .settings_img{
    width: 10%;
    position: absolute;
    right: 0%;
    top: 0%;
    display: none;/*Montrer*/
  }

  .extend_chanels_panel{
    position: absolute;
    top: 45%;
    bottom: 45%;
    left: 0%;
    right: 90%;
    background-color: rgba(61, 61, 61, 0.5);
    border-style: dotted;
  }

  .extend_online_panel{
    position: absolute;
    top: 45%;
    bottom: 45%;
    left: 90%;
    right: 0%;
    background-color: rgba(61, 61, 61, 0.5);
    border-style: dotted;
  }

  .animation_arrow{
      position: absolute;
      top: 25%;
      left: 0%;
      width: 100%;
  }

  #message_text_input{
    position: absolute;
    bottom: 0.5%;
    left: 50%;
    width: 90vw;
    -ms-transform: translate(-50%, 0%);
    transform: translate(-50%, 0%);
  }
}
