/*Affichage des chanels*/
.chanel{
  position: relative;
  height: 5%;
  width: 100%;
  border-radius: 30px;
  background-color: rgba(61, 61, 61);
  margin-top: 1%;
}

.chanel_name{
  margin: 0;
  margin-left: 18px;
  position: absolute;
  top: 50%;
  -ms-transform: translateY(-50%); /*https://www.w3schools.com/howto/howto_css_center-vertical.asp*/
  transform: translateY(-50%);
  color: white;
}

.text_chanel_image{
  position: absolute;
  top:10%;
  right: 5%;
  width: 10%;
}

.stylized_input{
  display: inline-block;
  background-color: rgba(0, 0, 0, 0.4);
  margin-bottom: 10px;
  padding: 10px;
  outline: none;
  border: none;
  color: white;
  border-radius: 25px;
  text-align: center;
}

#chanel_name_input{
  margin: 0;
  position: absolute;
  left: 50%;
  top:10%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

#chanel_position_input{
  margin: 0;
  position: absolute;
  top: 90%;
  bottom: 0.5%;
  left: 80%;
  width: 18%;

}

#chanel_desc_textarea{
  position: absolute;
  left: 2%;
  top: 20%;
  bottom: 12%;
  width: 40%;
  border-radius: 20px;
  background-color: rgba(135, 135, 135, 0.4);
  color: white;
}

#chanel_modify_submit_button_div{
  position: absolute;
  top: 90%;
  bottom: 0.5%;
  right: 25%;
  left: 2%;
}

#chanel_modify_submit_button{
  width: 100%;
  height: 100%;
  border-radius: 10px;
  outline: none;
  border: none;
  background-color: rgba(106, 133, 80, 0.6);
}
