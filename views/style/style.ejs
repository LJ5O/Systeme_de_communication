*{
		font-family: Arial;
}

a{
		text-decoration: none;
		color:#235975;
}

.pointer{
	cursor: pointer;
}

html, body{
	height: 100%;
	overflow:hidden;
}

.stylized_input{
  display: inline-block;
  background-color: rgba(0, 0, 0, 0.4);
  margin-bottom: 10px;
  padding: 10px;
  outline: none;
  border: none;
  color: white;
  border-radius: 25px;
  text-align: center;
}

body{
	background: linear-gradient(-30deg, #6e1aad, #2f2e36, #8a3380);
	background-size: 400% 400%;
	animation: background_movement 20s ease infinite;
}

@keyframes background_movement{
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
